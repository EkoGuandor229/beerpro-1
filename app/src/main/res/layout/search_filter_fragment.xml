<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.explore.search.SearchFilterFragment"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Category"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:name="ch.beerpro.presentation.explore.BeerCategoriesFragment"
        android:id="@+id/BeerCategoriesFragment"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Manufacturer"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:name="ch.beerpro.presentation.explore.BeerManufacturersFragment"
        android:id="@+id/BeerManufacturersFragment"
        />

</LinearLayout>